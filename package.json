{
  "name": "ternity",
  "private": true,
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "type-check": "pnpm -r type-check",
    "test": "pnpm -r test",
    "db:generate": "pnpm --filter @ternity/api db:generate",
    "db:migrate": "pnpm --filter @ternity/api db:migrate",
    "db:seed": "pnpm --filter @ternity/api db:seed"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@9.15.4",
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "eslint": "^9.18.0",
    "prettier": "^3.4.0",
    "typescript-eslint": "^8.20.0"
  }
}
