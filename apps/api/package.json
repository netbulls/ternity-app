{
  "name": "@ternity/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch --watch-path=.env.local --env-file=.env.local src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "test": "vitest run",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "tsx src/db/seed.ts",
    "sync:extract": "tsx --env-file=../../.env.sync src/cli/sync-extract.ts",
    "sync:transform": "tsx --env-file=../../.env.sync src/cli/sync-transform.ts",
    "sync:run": "tsx --env-file=../../.env.sync src/cli/sync-run.ts",
    "sync:users": "tsx --env-file=../../.env.sync src/cli/sync-users.ts",
    "sync:verify": "tsx --env-file=../../.env.sync src/cli/sync-verify.ts",
    "sync:service": "tsx --env-file=../../.env.sync src/sync-service.ts",
    "email:test": "tsx --env-file=.env.local src/cli/email-test.ts",
    "sms:test": "tsx --env-file=.env.local src/cli/sms-test.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.0",
    "@ternity/shared": "workspace:*",
    "drizzle-orm": "^0.38.0",
    "fastify": "^5.2.0",
    "fastify-plugin": "^5.0.0",
    "jose": "^6.1.3",
    "pg": "^8.13.0",
    "pino-pretty": "^13.0.0",
    "resend": "^6.9.2",
    "twilio": "^5.10.4",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/pg": "^8.11.0",
    "drizzle-kit": "^0.30.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
